<header id="cover">
  <h1 id="title">
    {{ book.title }}
  </h1>
  <p id="byline">
    <a href="{{ book.author.url }}" class="h-card">{{ book.author.name }}</a>
    | {{ book.sub }}
  </p>

  <nav id="cta">
    <a href="{{ book.buy }}" class="btn-like">order now »</a>
    or
    <a href="{{ book.read }}" class="btn-like">read online »</a>
  </nav>

  {% include "neck.svg" %}
</header>
